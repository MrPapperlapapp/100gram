generator client {
  provider     = "prisma-client"
  output       = "../prisma/generated"
  moduleFormat = "cjs"
}

model User {
  id       String @id @default(uuid())
  email    String @unique @db.VarChar(30)
  name     String @unique @db.VarChar(30)
  password String @db.VarChar(255)
  role     Roles  @default(USER)

  @@map("users")
}

enum Roles {
  ADMIN
  USER
}

datasource db {
  provider = "postgresql"
}
