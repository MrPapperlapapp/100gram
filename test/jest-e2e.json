{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1",
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@prisma/generated$": "<rootDir>/../prisma/generated",
    "^@prisma/generated/(.*)$": "<rootDir>/../prisma/generated/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup-e2e.ts"]
}
